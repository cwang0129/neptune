<h1>Listing all items</h1>
<p>
	<%= link_to "Create new item", new_item_path %>
</p>


<table>
	<tr>
		<th>ID</th>
		<th>Name</th>
		<th>SKU</th>
		<th>Active</th>
	</tr>
	<% @items.each do |item| %>
	<tr>
		<td><%= item.id %></td>
		<td><%= item.name %></td>
		<td><%= item.sku %></td>
		<td><%= item.active %></td>
		<td><%= link_to 'Edit', edit_item_path(item) %></td>
		<td><%= link_to 'Show', item_path(item) %></td>
		<td><%= link_to 'Delete', item_path(item), method: :delete, data: {confirm:"are you sure?"} %></td>
	</tr>
	<% end %>
</table>